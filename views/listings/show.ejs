<!-- Enhanced JavaScript with Fixed Sticky Overlap Prevention -->
<script>
document.addEventListener('DOMContentLoaded', function() {
    const listingPrice = <%= listing.price %>;
    
    // Initialize AOS if available
    if (typeof AOS !== 'undefined') {
        AOS.init({
            duration: 800,
            easing: 'ease-in-out-cubic',
            once: true,
            offset: 50
        });
    }

    // ENHANCED STICKY BEHAVIOR WITH OVERLAP PREVENTION
    const bookingCard = document.getElementById('bookingCard');
    const mapCard = document.getElementById('mapCard');
    const stickyBooking = document.querySelector('.sticky-booking');
    
    if (bookingCard && mapCard && window.innerWidth >= 1200) {
        let isSticky = false;
        
        function handleStickyBooking() {
            const bookingRect = bookingCard.getBoundingClientRect();
            const mapRect = mapCard.getBoundingClientRect();
            const navbarHeight = 112; // 7rem converted to pixels
            const buffer = 20; // Extra space buffer
            
            // Check if booking form should be sticky
            if (bookingRect.top <= navbarHeight && !isSticky) {
                // Check if it would overlap with map
                if (mapRect.top > navbarHeight + bookingCard.offsetHeight + buffer) {
                    stickyBooking.classList.add('is-sticky');
                    isSticky = true;
                }
            }
            // Check if booking form should stop being sticky
            else if (isSticky) {
                // Stop being sticky if we would overlap with map
                if (mapRect.top <= navbarHeight + bookingCard.offsetHeight + buffer) {
                    stickyBooking.classList.remove('is-sticky');
                    stickyBooking.classList.add('stop-before-map');
                    isSticky = false;
                }
                // Or if we scroll back up past the original position
                else if (window.scrollY <= bookingCard.parentElement.offsetTop - navbarHeight) {
                    stickyBooking.classList.remove('is-sticky');
                    stickyBooking.classList.remove('stop-before-map');
                    isSticky = false;
                }
            }
            
            // Remove stop-before-map class if map is far enough
            if (mapRect.top > navbarHeight + bookingCard.offsetHeight + buffer) {
                stickyBooking.classList.remove('stop-before-map');
            }
        }
        
        // Use throttled scroll listener for better performance
        let ticking = false;
        function throttledScroll() {
            if (!ticking) {
                requestAnimationFrame(function() {
                    handleStickyBooking();
                    ticking = false;
                });
                ticking = true;
            }
        }
        
        window.addEventListener('scroll', throttledScroll);
        window.addEventListener('resize', function() {
            if (window.innerWidth < 1200) {
                stickyBooking.classList.remove('is-sticky', 'stop-before-map');
                isSticky = false;
            }
        });
    }

    // Favorite button toggle
    const favoriteBtn = document.getElementById('favoriteBtn');
    if (favoriteBtn) {
        favoriteBtn.addEventListener('click', function() {
            const icon = this.querySelector('i');
            if (icon.classList.contains('far')) {
                icon.classList.remove('far');
                icon.classList.add('fas');
                this.style.background = '#fe424d';
                this.style.color = 'white';
                showNotification('Added to favorites!', 'success');
                
                this.style.transform = 'scale(1.2)';
                setTimeout(() => {
                    this.style.transform = 'scale(1)';
                }, 200);
            } else {
                icon.classList.remove('fas');
                icon.classList.add('far');
                this.style.background = 'rgba(255, 255, 255, 0.9)';
                this.style.color = '#374151';
                showNotification('Removed from favorites!', 'info');
            }
        });
    }

    // Share button
    const shareBtn = document.getElementById('shareBtn');
    if (shareBtn) {
        shareBtn.addEventListener('click', function() {
            this.style.transform = 'scale(0.95)';
            setTimeout(() => {
                this.style.transform = 'scale(1)';
            }, 150);
            
            if (navigator.share) {
                navigator.share({
                    title: '<%= listing.title %>',
                    text: 'Check out this amazing place on Wanderlust!',
                    url: window.location.href
                }).catch(console.error);
            } else {
                if (navigator.clipboard) {
                    navigator.clipboard.writeText(window.location.href).then(() => {
                        showNotification('Link copied to clipboard!', 'success');
                    }).catch(() => {
                        showNotification('Failed to copy link', 'error');
                    });
                } else {
                    showNotification('Share this link: ' + window.location.href, 'info');
                }
            }
        });
    }

    // Star rating functionality
    const stars = document.querySelectorAll('.star');
    const ratingValue = document.getElementById('ratingValue');
    const ratingText = document.querySelector('.rating-text');
    
    const ratingTexts = {
        1: 'Poor',
        2: 'Fair', 
        3: 'Good',
        4: 'Very Good',
        5: 'Excellent'
    };

    if (stars.length > 0 && ratingValue && ratingText) {
        stars.forEach((star) => {
            star.addEventListener('click', function() {
                const rating = parseInt(this.getAttribute('data-rating'));
                ratingValue.value = rating;
                ratingText.textContent = ratingTexts[rating];
                
                stars.forEach((s, i) => {
                    if (i < rating) {
                        s.classList.add('active');
                    } else {
                        s.classList.remove('active');
                    }
                });
            });
            
            star.addEventListener('mouseenter', function() {
                const rating = parseInt(this.getAttribute('data-rating'));
                stars.forEach((s, i) => {
                    if (i < rating) {
                        s.style.color = '#fbbf24';
                        s.style.transform = 'scale(1.1)';
                    } else {
                        s.style.color = '#d1d5db';
                        s.style.transform = 'scale(1)';
                    }
                });
            });
        });

        const starContainer = document.querySelector('.stars-container');
        if (starContainer) {
            starContainer.addEventListener('mouseleave', function() {
                const currentRating = parseInt(ratingValue.value);
                stars.forEach((s, i) => {
                    if (i < currentRating) {
                        s.style.color = '#fbbf24';
                    } else {
                        s.style.color = '#d1d5db';
                    }
                    s.style.transform = 'scale(1)';
                });
            });
        }
    }

    // Character counter for review textarea
    const commentTextarea = document.getElementById('comment');
    const charCount = document.getElementById('charCount');
    
    if (commentTextarea && charCount) {
        commentTextarea.addEventListener('input', function() {
            const count = this.value.length;
            charCount.textContent = count;
            
            if (count > 450) {
                charCount.style.color = '#fe424d';
            } else if (count > 400) {
                charCount.style.color = '#f59e0b';
            } else {
                charCount.style.color = '#6b7280';
            }
            
            if (count >= 500) {
                this.value = this.value.substring(0, 500);
                charCount.textContent = '500';
            }
        });
    }

    // Enhanced booking form with price calculation
    const checkinInput = document.getElementById('checkin');
    const checkoutInput = document.getElementById('checkout');
    const today = new Date().toISOString().split('T')[0];
    
    // Set minimum dates
    if (checkinInput) {
        checkinInput.setAttribute('min', today);
        checkinInput.addEventListener('change', function() {
            if (checkoutInput) {
                const nextDay = new Date(this.value);
                nextDay.setDate(nextDay.getDate() + 1);
                checkoutInput.setAttribute('min', nextDay.toISOString().split('T')[0]);
                
                if (!checkoutInput.value) {
                    checkoutInput.value = nextDay.toISOString().split('T');
                }
                
                calculatePrice();
                
                this.style.borderColor = '#10b981';
                setTimeout(() => {
                    this.style.borderColor = '#e5e7eb';
                }, 1000);
            }
        });
    }
    
    if (checkoutInput) {
        checkoutInput.setAttribute('min', today);
        checkoutInput.addEventListener('change', function() {
            calculatePrice();
            
            this.style.borderColor = '#10b981';
            setTimeout(() => {
                this.style.borderColor = '#e5e7eb';
            }, 1000);
        });
    }

    // Price calculation function
    function calculatePrice() {
        const checkin = checkinInput?.value;
        const checkout = checkoutInput?.value;
        
        if (checkin && checkout) {
            const checkinDate = new Date(checkin);
            const checkoutDate = new Date(checkout);
            const nights = Math.ceil((checkoutDate - checkinDate) / (1000 * 60 * 60 * 24));
            
            if (nights > 0) {
                const subtotal = listingPrice * nights;
                const serviceFee = Math.round(subtotal * 0.1);
                const total = subtotal + serviceFee;
                
                // Update display
                document.getElementById('nightCount').textContent = nights;
                document.getElementById('subtotalAmount').textContent = `â‚¹${subtotal.toLocaleString("en-IN")}`;
                document.getElementById('serviceFee').textContent = `â‚¹${serviceFee.toLocaleString("en-IN")}`;
                document.getElementById('totalAmount').textContent = `â‚¹${total.toLocaleString("en-IN")}`;
            }
        }
    }

    // Enhanced booking form submission
    const bookingFormContainer = document.querySelector('.booking-form-container');
    if (bookingFormContainer) {
        bookingFormContainer.addEventListener('submit', function(e) {
            e.preventDefault();
            
            const checkin = checkinInput?.value;
            const checkout = checkoutInput?.value;
            const guests = document.querySelector('.guest-select')?.value;
            
            if (!checkin || !checkout) {
                showNotification('Please select check-in and check-out dates', 'error');
                return;
            }
            
            if (new Date(checkin) >= new Date(checkout)) {
                showNotification('Check-out date must be after check-in date', 'error');
                return;
            }
            
            const nights = Math.ceil((new Date(checkout) - new Date(checkin)) / (1000 * 60 * 60 * 24));
            const total = Math.round(listingPrice * nights * 1.1);
            
            const reserveBtn = document.querySelector('.btn-reserve');
            const originalContent = reserveBtn.innerHTML;
            
            reserveBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Processing...';
            reserveBtn.disabled = true;
            
            setTimeout(() => {
                showNotification(`Booking confirmed!\nDates: ${checkin} to ${checkout}\nGuests: ${guests}\nTotal: â‚¹${total.toLocaleString("en-IN")}`, 'success');
                reserveBtn.innerHTML = originalContent;
                reserveBtn.disabled = false;
            }, 2000);
        });
    }

    // Guest select enhancement
    const guestSelect = document.querySelector('.guest-select');
    if (guestSelect) {
        guestSelect.addEventListener('change', function() {
            this.style.borderColor = '#10b981';
            setTimeout(() => {
                this.style.borderColor = '#e5e7eb';
            }, 1000);
        });
    }

    // Directions button functionality
    const directionsBtn = document.querySelector('.btn-directions');
    if (directionsBtn) {
        directionsBtn.addEventListener('click', function() {
            const location = '<%= listing.location %>, <%= listing.country %>';
            const googleMapsUrl = `https://www.google.com/maps/search/${encodeURIComponent(location)}`;
            window.open(googleMapsUrl, '_blank');
        });
    }

    // Image fullscreen functionality
    const mainImage = document.getElementById('mainImage');
    if (mainImage) {
        mainImage.addEventListener('click', function() {
            if (this.requestFullscreen) {
                this.requestFullscreen();
            } else if (this.webkitRequestFullscreen) {
                this.webkitRequestFullscreen();
            } else if (this.msRequestFullscreen) {
                this.msRequestFullscreen();
            }
        });
        
        mainImage.title = 'Click to view fullscreen';
    }

    // Fix map container z-index after map loads
    setTimeout(() => {
        const mapCanvas = document.querySelector('.mapboxgl-canvas');
        const mapContainer = document.querySelector('.mapboxgl-control-container');
        
        if (mapCanvas) {
            mapCanvas.style.position = 'relative';
            mapCanvas.style.zIndex = '1';
        }
        
        if (mapContainer) {
            mapContainer.style.position = 'relative';
            mapContainer.style.zIndex = '2';
        }
    }, 1000);

    // Initialize price calculation
    calculatePrice();
});

// Enhanced notification function
function showNotification(message, type = 'info') {
    const notification = document.createElement('div');
    notification.className = `notification notification-${type}`;
    notification.innerHTML = `
        <div class="notification-content">
            <i class="fas fa-${type === 'success' ? 'check-circle' : type === 'error' ? 'exclamation-circle' : 'info-circle'}"></i>
            <span>${message}</span>
        </div>
    `;
    
    document.body.appendChild(notification);
    
    setTimeout(() => {
        notification.style.animation = 'slideOutRight 0.3s ease';
        setTimeout(() => {
            document.body.removeChild(notification);
        }, 300);
    }, 4000);
}

