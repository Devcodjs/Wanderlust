<% layout("/layouts/boilerplate") %>

<div class="listing-show-container">
    <!-- Hero Section -->
    <div class="listing-hero">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="hero-content">
                        <div class="hero-breadcrumb" data-aos="fade-up">
                            <a href="/listings" class="breadcrumb-link">
                                <i class="fas fa-arrow-left"></i>
                                Back to listings
                            </a>
                        </div>
                        <h1 class="hero-title" data-aos="fade-up" data-aos-delay="100">
                            <%= listing.title %>
                        </h1>
                        <div class="hero-location" data-aos="fade-up" data-aos-delay="200">
                            <i class="fas fa-map-marker-alt"></i>
                            <%= listing.location %>, <%= listing.country %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Content -->
    <div class="container listing-content">
        <div class="row">
            <!-- Left Column - Details -->
            <div class="col-lg-8">
                <!-- Image Gallery -->
                <div class="image-gallery" data-aos="fade-up">
                    <div class="main-image">
                        <img src="<%= listing.image.url %>" 
                             class="img-fluid" 
                             alt="<%= listing.title %>"
                             id="mainImage">
                        <div class="image-overlay">
                            <button class="btn-favorite" id="favoriteBtn">
                                <i class="far fa-heart"></i>
                            </button>
                            <button class="btn-share" id="shareBtn">
                                <i class="fas fa-share-alt"></i>
                            </button>
                        </div>
                    </div>
                </div>

                <!-- Property Details -->
                <div class="property-details glass-card" data-aos="fade-up" data-aos-delay="100">
                    <div class="details-header">
                        <h2 class="details-title">About this property</h2>
                        <div class="price-display">
                            <span class="price">â‚¹<%= listing.price.toLocaleString("en-IN") %></span>
                            <span class="price-period">per night</span>
                        </div>
                    </div>
                    
                    <div class="property-description">
                        <p><%= listing.description %></p>
                    </div>

                    <div class="property-amenities">
                        <h3 class="amenities-title">What this place offers</h3>
                        <div class="amenities-grid">
                            <div class="amenity-item">
                                <i class="fas fa-wifi"></i>
                                <span>Free WiFi</span>
                            </div>
                            <div class="amenity-item">
                                <i class="fas fa-parking"></i>
                                <span>Free parking</span>
                            </div>
                            <div class="amenity-item">
                                <i class="fas fa-snowflake"></i>
                                <span>Air conditioning</span>
                            </div>
                            <div class="amenity-item">
                                <i class="fas fa-utensils"></i>
                                <span>Kitchen</span>
                            </div>
                            <div class="amenity-item">
                                <i class="fas fa-swimming-pool"></i>
                                <span>Pool</span>
                            </div>
                            <div class="amenity-item">
                                <i class="fas fa-dumbbell"></i>
                                <span>Gym</span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Owner Controls -->
                <% if(currUser && listing.owner && currUser._id.equals(listing.owner._id)) { %>
                    <div class="owner-controls glass-card" data-aos="fade-up" data-aos-delay="200">
                        <h3 class="controls-title">
                            <i class="fas fa-cog"></i>
                            Manage Listing
                        </h3>
                        <div class="controls-buttons">
                            <a href="/listings/<%= listing._id %>/edit" class="btn btn-edit">
                                <i class="fas fa-edit"></i>
                                Edit Listing
                            </a>
                            <form class="delete-form" method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
                                <button type="submit" class="btn btn-delete" onclick="return confirm('Are you sure you want to delete this listing?')">
                                    <i class="fas fa-trash-alt"></i>
                                    Delete Listing
                                </button>
                            </form>
                        </div>
                    </div>
                <% } %>

                <!-- Reviews Section -->
                <div class="reviews-section" data-aos="fade-up" data-aos-delay="300">
                    <div class="reviews-header">
                        <h2 class="reviews-title">
                            <i class="fas fa-star"></i>
                            Guest Reviews
                            <% if(listing.reviews.length > 0) { %>
                                <span class="reviews-count">(<%= listing.reviews.length %>)</span>
                            <% } %>
                        </h2>
                    </div>

                    <% if(listing.reviews.length > 0) { %>
                        <div class="reviews-grid">
                            <% listing.reviews.forEach(function(review) { %>
                                <div class="review-card glass-card" data-aos="fade-up" data-aos-delay="100">
                                    <div class="review-header">
                                        <div class="reviewer-info">
                                            <div class="reviewer-avatar">
                                                <%= review.author.username.charAt(0).toUpperCase() %>
                                            </div>
                                            <div class="reviewer-details">
                                                <h4 class="reviewer-name"><%= review.author.username %></h4>
                                                <div class="review-date">March 2024</div>
                                            </div>
                                        </div>
                                        <div class="review-rating">
                                            <div class="stars">
                                                <% for(let i = 1; i <= 5; i++) { %>
                                                    <i class="fas fa-star <%= i <= review.rating ? 'active' : '' %>"></i>
                                                <% } %>
                                            </div>
                                            <span class="rating-number"><%= review.rating %></span>
                                        </div>
                                    </div>
                                    <div class="review-content">
                                        <p><%= review.comment %></p>
                                    </div>
                                    <% if(currUser && review.author._id.equals(currUser._id)) { %>
                                        <div class="review-actions">
                                            <form method="POST" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE" class="delete-review-form">
                                                <button type="submit" class="btn-delete-review" onclick="return confirm('Delete this review?')">
                                                    <i class="fas fa-trash-alt"></i>
                                                    Delete
                                                </button>
                                            </form>
                                        </div>
                                    <% } %>
                                </div>
                            <% }) %>
                        </div>
                    <% } else { %>
                        <div class="no-reviews">
                            <div class="no-reviews-icon">
                                <i class="fas fa-star-half-alt"></i>
                            </div>
                            <h3>No reviews yet</h3>
                            <p>Be the first to share your experience!</p>
                        </div>
                    <% } %>

                    <!-- New Review Form -->
                    <% if(currUser) { %>
                        <div class="review-form-container glass-card" data-aos="fade-up" data-aos-delay="400">
                            <h3 class="form-title">
                                <i class="fas fa-pen"></i>
                                Share your experience
                            </h3>
                            <form action="/listings/<%= listing._id %>/reviews" method="POST" class="review-form">
                                <div class="rating-input-group">
                                    <label class="form-label">Your Rating</label>
                                    <div class="star-rating" id="starRating">
                                        <input type="hidden" name="review[rating]" id="ratingValue" value="5">
                                        <div class="stars-container">
                                            <i class="fas fa-star star" data-rating="1"></i>
                                            <i class="fas fa-star star" data-rating="2"></i>
                                            <i class="fas fa-star star" data-rating="3"></i>
                                            <i class="fas fa-star star" data-rating="4"></i>
                                            <i class="fas fa-star star active" data-rating="5"></i>
                                        </div>
                                        <span class="rating-text">Excellent</span>
                                    </div>
                                </div>

                                <div class="comment-input-group">
                                    <label for="comment" class="form-label">Your Review</label>
                                    <textarea 
                                        name="review[comment]" 
                                        id="comment" 
                                        class="form-control-modern" 
                                        rows="4" 
                                        placeholder="Share your thoughts about this place..."
                                        required></textarea>
                                    <div class="character-count">
                                        <span id="charCount">0</span>/500 characters
                                    </div>
                                </div>

                                <button type="submit" class="btn btn-submit-review">
                                    <i class="fas fa-paper-plane"></i>
                                    Submit Review
                                </button>
                            </form>
                        </div>
                    <% } else { %>
                        <div class="login-prompt glass-card" data-aos="fade-up" data-aos-delay="400">
                            <div class="prompt-content">
                                <h3>Want to leave a review?</h3>
                                <p>Sign in to share your experience with other travelers</p>
                                <a href="/login" class="btn btn-login-prompt">
                                    <i class="fas fa-sign-in-alt"></i>
                                    Sign In
                                </a>
                            </div>
                        </div>
                    <% } %>
                </div>
            </div>

            <!-- Right Column - Booking & Map -->
            <div class="col-lg-4">
                <!-- Sticky Sentinel for detecting when to stop sticky behavior -->
                <div class="sticky-sentinel" id="stickySentinel"></div>
                
                <div class="booking-sidebar" data-aos="fade-left" data-aos-delay="200">
                    <!-- Booking Card -->
                    <div class="booking-card glass-card sticky-booking" id="bookingCard">
                        <div class="booking-header">
                            <div class="price-info">
                                <span class="current-price">â‚¹<%= listing.price.toLocaleString("en-IN") %></span>
                                <span class="price-period">per night</span>
                            </div>
                            <div class="rating-info">
                                <i class="fas fa-star"></i>
                                <span class="rating">4.8</span>
                                <span class="review-count">(<%= listing.reviews.length %> reviews)</span>
                            </div>
                        </div>

                        <div class="booking-form">
                            <form class="booking-form-container">
                                <div class="date-inputs">
                                    <div class="input-group">
                                        <label class="input-label">Check-in</label>
                                        <input type="date" class="date-input" id="checkin">
                                    </div>
                                    <div class="input-group">
                                        <label class="input-label">Check-out</label>
                                        <input type="date" class="date-input" id="checkout">
                                    </div>
                                </div>
                                <div class="guest-input">
                                    <label class="input-label">Guests</label>
                                    <select class="guest-select">
                                        <option value="1">1 guest</option>
                                        <option value="2">2 guests</option>
                                        <option value="3">3 guests</option>
                                        <option value="4">4+ guests</option>
                                    </select>
                                </div>
                                <button type="submit" class="btn-reserve">
                                    <span>Reserve</span>
                                    <i class="fas fa-arrow-right"></i>
                                </button>
                            </form>
                            <div class="booking-note">
                                <i class="fas fa-info-circle"></i>
                                You won't be charged yet
                            </div>
                        </div>

                        <div class="price-breakdown">
                            <div class="breakdown-item">
                                <span>â‚¹<%= listing.price.toLocaleString("en-IN") %> Ã— <span id="nightCount">5</span> nights</span>
                                <span id="subtotalAmount">â‚¹<%= (listing.price * 5).toLocaleString("en-IN") %></span>
                            </div>
                            <div class="breakdown-item">
                                <span>Service fee</span>
                                <span id="serviceFee">â‚¹<%= Math.round(listing.price * 0.1).toLocaleString("en-IN") %></span>
                            </div>
                            <div class="breakdown-divider"></div>
                            <div class="breakdown-total">
                                <span>Total</span>
                                <span id="totalAmount">â‚¹<%= Math.round(listing.price * 5.1).toLocaleString("en-IN") %></span>
                            </div>
                        </div>
                    </div>

                    <!-- Map Card -->
                    <div class="map-card glass-card" id="mapCard">
                        <div class="map-header">
                            <h3 class="map-title">
                                <i class="fas fa-map-marker-alt"></i>
                                Location
                            </h3>
                            <p class="map-address"><%= listing.location %>, <%= listing.country %></p>
                        </div>
                        <div class="map-container">
                            <div id="map"></div>
                        </div>
                        <div class="map-footer">
                            <button class="btn-directions">
                                <i class="fas fa-directions"></i>
                                Get directions
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

